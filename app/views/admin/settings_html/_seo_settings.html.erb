<div class="link-settings">

  <table class="table table-condensed">
    <thead>
      <tr>
        <th class="seo-name">网页地址</th>
        <th class="seo-type">title</th>
        <th class="link-logo">keywords</th>
        <th class="link-logo">description</th>
        <th class="link-action">操作</th>
      </tr>
    </thead>
    <tbody>
      <% seos = AdminSetting.find_all_by_type_name("seo") %>
      <% seos.each do |seo| %>
        <% value = JSON.parse(seo.value) %>
        <tr id="seo-<%= seo.id %>">
          <td class="seo-name"><%= seo["name"] %></td>
          <td class="seo-type"><%= value["title"] %></td>
          <td class="link-logo"><%= value["keywords"] %></td>
          <td class="link-logo"><%= value["description"] %></td>
          <td class="link-action">
            <%= link_to "编辑", edit_admin_seo_setting_path(:id => seo.id, :setting_type_id => @setting_type.id, :setting_subject_id => @setting_subject.id), :class => 'btn btn-mini' %>
            <%= link_to "删除", admin_seo_setting_path(seo), :method => :delete, :confirm => "你确定要删除该SEO？",:class => 'btn btn-mini btn-danger', :remote => true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "添加新SEO", new_admin_seo_setting_path, :class => 'btn btn-primary' %>
</div>
