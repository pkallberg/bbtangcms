<%= render "work/shared/top_nav_bar" %>
<%- model_class = @work_contact.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.show', :model => model_class.model_name.human) %></h1>
</div>

<%= show_for @work_contact do |s| %>
  <%= s.attribute :name %>
  <%= s.attribute :email %>
  <%= s.attribute :subject %>
  <%= s.attribute :message %>
  <%= s.attribute :created_at %>
  <%= s.attribute :updated_at %>
<% end %>


<div class="actions">
  <% if can? :read, @work_contact %>
    <%= link_to t('.back', :default => t("helpers.links.back", :model => model_class.model_name.human)),
              work_contacts_path, :class => 'btn'  %>
  <% end %>
  <% if can? :update, @work_contact %>
    <%= link_to t('.edit', :default => t("helpers.links.edit", :model => model_class.model_name.human)),
              edit_work_contact_path(@work_contact), :class => 'btn' %>
  <% end %>
  <% if can? :destroy, @work_contact %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy", :model => model_class.model_name.human)),
              work_contact_path(@work_contact),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
  <% end %>
</div>
