<%= render "quiz_center/shared/top_nav_bar" %>
<%- model_class = Quiz.new.class -%>
<%= show_for @quiz_center_quiz do |s| %>
  <%= s.attribute :title %>
  <%= s.attribute :answer %>
  <%= s.attribute :end_date %>
  <%= s.attribute :created_at %>
  <%= s.attribute :updated_at %>
<% end %>

<% if can? :update, @quiz_center_quiz %>
  <%= link_to t('.edit', :default => t("helpers.links.edit", :model => model_class.model_name.human)), edit_quiz_center_quiz_path(@quiz_center_quiz), :class => 'btn' %> |
<% end %>
<% if can? :read, @quiz_center_quiz %>
  <%= link_to t('.back', :default => t("helpers.links.back", :model => model_class.model_name.human)), quiz_center_quizzes_path, :class => 'btn' %> |
<% end %>
<% if can? :destroy, @quiz_center_quiz %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy", :model => model_class.model_name.human)), quiz_center_quiz_path(@quiz_center_quiz),
              :method => 'delete',
              :confirm => t('.confirm',
              :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
<% end %>
