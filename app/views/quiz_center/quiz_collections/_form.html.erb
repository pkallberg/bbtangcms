<%= simple_form_for([:quiz_center,@quiz_center_quiz_collection]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :coll_name %>
    <%= f.input :keywords %>
    <%= f.input :quiz_ids, :input_html => { :placeholder => 'input the value split with ","', :value => (@quiz_center_quiz_collection.quiz_ids.join(",") if @quiz_center_quiz_collection.quiz_ids.present?) } %>
    <%# f.input :created_at %>
    <%# f.input :updated_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary', :disable_with => 'loading...' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                quiz_center_quiz_collections_path, :class => 'btn' %>
  </div>
<% end %>
