<%= simple_form_for([@question,@answer]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <!--%= f.input :content %-->
    <%= f.input :body %>
    <!--%= f.input :created_by %-->
    <!--%= f.input :question_id %-->
    <!--%= f.input :opposition_count %-->
    <!--%= f.input :opposition_ids %-->
    <!--%= f.input :approval_count %-->
    <!--%= f.input :approval_ids %-->
    <!--%= f.input :expert_count %-->
    <!--%= f.input :deleted_at %-->
    <!--%= f.input :deleted_by %-->
    <%= f.input :is_anonymous %>
    <!--%= f.input :no_help_count %-->
    <!--%= f.input :no_help_ids %-->
    <!--%= f.input :delta %-->
    <%= f.input :soft_deleted, :as => :boolean, :input_html => {:checked =>  @answer.deleted_at? ? "checked" : ""} %>
    <%= f.input :state %>
    <% if @answer.new_record? %>
      <%= f.input :created_by, :as => :hidden, :input_html => { :value => (current_user.id if current_user.present?) } %>
      <%= f.input :created_at, :as => :hidden, :input_html => { :value => Time.now } %>
    <% else %>
      <%= f.input :updated_at, :as => :hidden, :input_html => { :value => Time.now} %>
    <% end %>
    <%= f.input :is_expert %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                question_answers_path(@question), :class => 'btn' %>
  </div>
<% end %>
