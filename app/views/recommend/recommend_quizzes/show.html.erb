<%- model_class = Recommend::RecommendQuiz.new.class -%>
<%= show_for @recommend_recommend_quiz do |s| %>
  <%= s.attribute :position,:value => @recommend_recommend_quiz.post_name %>
  <%= s.attribute :name %>
  <%= s.attribute :body %>
  <%= s.attribute :created_at %>
  <%= s.attribute :updated_at %>
  <%= s.attribute :ids %>
<% end %>

<% if can? :update, @recommend_recommend_quiz %>
  <%= link_to t('.edit', :default => t("helpers.links.edit", :model => model_class.model_name.human)), edit_recommend_recommend_quiz_path(@recommend_recommend_quiz), :class => 'btn' %> |
<% end %>
<% if can? :read, @recommend_recommend_quiz %>
  <%= link_to t('.back', :default => t("helpers.links.back", :model => model_class.model_name.human)), recommend_recommend_quizzes_path, :class => 'btn' %> |
<% end %>
<% if can? :destroy, @recommend_recommend_quiz %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy", :model => model_class.model_name.human)), recommend_recommend_quiz_path(@recommend_recommend_quiz),
              :method => 'delete',
              :confirm => t('.confirm',
              :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
<% end %>
