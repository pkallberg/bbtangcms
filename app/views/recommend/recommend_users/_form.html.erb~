<%= simple_form_for(@recommend_recommend_user) do |f| %>
  <%= @recommend_recommend_user.errors.messages %>
  <div class="form-inputs">
    <%= f.input :position, :as => :select, :collection => Recommend::RecommendUser::POSITION.invert %>
    <%= f.input :name %>
    <%= f.input :body, :as => :text  %>
    <% if @recommend_recommend_user.new_record? %>
      <%= f.input :created_at, :as => :hidden, :input_html => { :value => Time.now } %>
    <% else %>
      <%= f.input :updated_at, :as => :hidden, :input_html => { :value => Time.now} %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary', :disable_with => 'loading...' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                recommend_recommend_users_path, :class => 'btn' %>
  </div>
<% end %>
