<%- model_class = Recommend::ExpertCategory.new.class -%>
  <h1><%=t '.title', :default => t('helpers.titles.show', :model => model_class.model_name.human,
                                 :default => "Show #{model_class.model_name.human}") %></h1>
<%= show_for @expert_category do |s| %>
  <%= s.attribute :name %>
  <%= s.attribute :sort_index %>
  <%= s.attribute :created_at, value: timeago_tag(@expert_category.created_at, :format => :short) if @expert_category.created_at? %>
  <%= s.attribute :updated_at %>
<% end %>

<% if can? :update, @expert_category %>
  <%= link_to t('.edit', :default => t("helpers.links.edit", :model => model_class.model_name.human)), edit_recommend_expert_category_path(@expert_category), :class => 'btn' %> |
<% end %>
<% if can? :read, @expert_category %>
  <%= link_to t('.back', :default => t("helpers.links.back", :model => model_class.model_name.human)), recommend_expert_categories_path, :class => 'btn' %> |
<% end %>
<% if can? :destroy, @expert_category %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy", :model => model_class.model_name.human)), recommend_expert_category_path(@expert_category),
              :method => 'delete',
              :confirm => t('.confirm',
              :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
<% end %>
