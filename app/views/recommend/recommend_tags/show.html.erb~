  <%= @recommend_recommend_tag.post_name%>
  <%= s.attribute :position,:value => @recommend_recommend_tag.post_name %>
  <%= s.attribute :name %>
  <%= s.attribute :body %>
  <%= s.attribute :created_at %>
  <%= s.attribute :updated_at %>
<% end %>

<%= link_to t('.edit', :default => t("helpers.links.edit", :model => model_class.model_name.human)), edit_recommend_recommend_tag_path(@recommend_recommend_tag), :class => 'btn' %> |
