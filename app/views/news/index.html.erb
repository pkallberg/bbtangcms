
<%- model_class = News.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>

  <div class="mod_action btn-group">
    <button class="btn btn-primary"><%=t('.operate', :default => t("helpers.links.operate", :model => model_class.model_name.human)) %></button>
    <button data-toggle="dropdown" class="btn btn-primary dropdown-toggle"><span class="caret"></span></button>
    <ul class="dropdown-menu">
      <li>
        <% if can? :create, News %>
          <%= link_to t('.new', :default => t("helpers.links.new", :model => model_class.model_name.human)),
                    new_news_path %>
        <% end %>
      </li>
    </ul>
  </div>
</div>

<div class = "news box">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <!--th><%= model_class.human_attribute_name(:content) %></th-->
      <!--th><%= model_class.human_attribute_name(:body) %></th-->
      <!--th><%= model_class.human_attribute_name(:tags) %></th-->
      <th><%= model_class.human_attribute_name(:source_info) %></th>
      <th><%= model_class.human_attribute_name(:created_user) %></th>
      <!--th><%= model_class.human_attribute_name(:created_name) %></th-->
      <th><%= model_class.human_attribute_name(:updated_user) %></th>
      <th><%= model_class.human_attribute_name(:thanks_count) %></th>
      <th><%= model_class.human_attribute_name(:views_count) %></th>
      <!--th><%= model_class.human_attribute_name(:deleted_at) %></th-->
      <!--th><%= model_class.human_attribute_name(:deleted_user) %></th-->
      <th><%= model_class.human_attribute_name(:deleted_user) %></th>
      <!--th><%= model_class.human_attribute_name(:auto_tags) %></th-->
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <%- indicates = true %>
    <% @news.each do |news| %>
      <tr class=<%= (indicates =!indicates) ? "success" : "info"%>>
        <td><%= link_to news.id, news_path(news), :title => object_summary(obj = news), :rel => "tooltip" %></td>
        <td><%= news.title %></td>
        <!--td><%= news.content %></td-->
        <!--td><%= news.body %></td-->
        <td><%= news.source_info %></td>
        <td><%= news.created_user %></td>
        <td><%= news.updated_user %></td>
        <td><%= news.thanks_count %></td>
        <td><%= news.views_count %></td>
        <td><%= news.deleted_user %></td>
        <td><%= news.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show", :model => model_class.model_name.human)),
                      news_path(news),
                      :class => 'btn btn-mini',
                      :title => "#{t("helpers.links.show", :model => model_class.model_name.human)} #{news}",
                      "data-content" => object_summary(obj = news, column = "content"),
                       :rel => "popover"
                       %>
          <% if can? :update, news %>
            <%= link_to t('.edit', :default => t("helpers.links.edit", :model => model_class.model_name.human)),
                      edit_news_path(news),
                      :class => 'btn btn-mini',
                      :title => "#{t("helpers.links.update", :model => model_class.model_name.human)} #{news}",
                      "data-content" => object_summary(obj = news, column = "content"),
                       :rel => "popover"

                       %>
          <% end %>
          <% if can? :destroy, news %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy", :model => model_class.model_name.human)),
                      news_path(news),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @news %>

<% if can? :create, News %>
  <%= link_to t('.new', :default => t("helpers.links.new", :model => model_class.model_name.human)),
            new_news_path,
            :class => 'btn btn-primary' %>
<% end %>
</div>
