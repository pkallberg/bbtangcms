<%- model_class = @subject.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.show', :model => model_class.model_name.human) %></h1>
</div>


<%= show_for @subject do |s| %>
  <%= s.attribute :title %>
  <%= s.attribute :title2 %>
  <%= s.attribute :summary %>
  <%= s.attribute :face  do %>
    <% image_tag @subject.face(:s120) if @subject.face.present? %>
  <% end %>
  <!--%= s.attribute :content %-->
  <%= s.attribute :body, :value => (raw @subject.body) %>
  <%= s.attribute :category %>
  <%= s.attribute :sort_index %>
  <%= s.attribute :releated_ids %>
  <%= s.attribute :created_user %>
  <%= s.attribute :created_by %>
  <%= s.attribute :created_at, :format => :short %>
  <%= s.attribute :updated_user %>
  <%= s.attribute :updated_by %>
  <%= s.attribute :updated_at, :format => :short %>
  <%= s.attribute :deleted_user %>
  <%= s.attribute :deleted_by_id %>
  <%= s.attribute :deleted_at, :format => :short %>
<% end %>

<div class="actions">
  <% if can? :read, @subject %>
    <%= link_to t('.back', :default => t("helpers.links.back", :model => model_class.model_name.human)),
              subjects_path, :class => 'btn'  %>
  <% end %>
  <% if can? :update, @subject %>
    <%= link_to t('.edit', :default => t("helpers.links.edit", :model => model_class.model_name.human)),
              edit_subject_path(@subject), :class => 'btn' %>
  <% end %>
  <% if can? :destroy, @subject %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy", :model => model_class.model_name.human)),
              subject_path(@subject),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
  <% end %>
</div>
