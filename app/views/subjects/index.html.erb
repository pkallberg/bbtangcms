
<%- model_class = Subject.new.class -%>
<div class="page-header">
  <h1><%=t '.index', :default => model_class.model_name.human.pluralize %></h1>
</div>


<div class = "subjects box">
<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:title2) %></th>
      <!--th><%= model_class.human_attribute_name(:summary) %></th-->
      <!--th><%= model_class.human_attribute_name(:content) %></th-->
      <!--th><%= model_class.human_attribute_name(:body) %></th-->
      <!--th><%= model_class.human_attribute_name(:category) %></th-->
      <!--th><%= model_class.human_attribute_name(:sort_index) %></th-->
      <!--th><%= model_class.human_attribute_name(:releated_ids) %></th-->
      <th><%= model_class.human_attribute_name(:created_user) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:updated_user) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%= model_class.human_attribute_name(:deleted_user) %></th>
      <th><%= model_class.human_attribute_name(:deleted_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= link_to subject.id, subject_path(subject), :title => object_summary(obj = subject), :rel => "tooltip" %></td>
        <td><%= subject.title %></td>
        <td><%= subject.title2 %></td>
        <!--td><%= subject.summary %></td-->
        <!--td><%= subject.content %></td-->
        <!--td><%= subject.body %></td-->
        <!--td><%= subject.category %></td-->
        <!--td><%= subject.sort_index %></td-->
        <!--td><%= subject.releated_ids %></td-->
        <td><%= subject.created_user %></td>
        <td><%= time_tag subject.created_at, :format => :short if subject.created_at? %></td>
        <td><%= subject.updated_user %></td>
        <td><%= time_tag subject.updated_at, :format => :short if subject.updated_at?  %></td>
        <td><%= subject.deleted_user %></td>
        <td><%= time_tag subject.deleted_at, :format => :short if subject.deleted_at? %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show", :model => model_class.model_name.human)),
                      subject_path(subject),
                      :class => 'btn btn-mini',
                      :title => "#{t("helpers.links.show", :model => model_class.model_name.human)} #{subject}",
                      "data-content" => object_summary(obj = subject, column = "content"),
                       :rel => "popover"
                       %>
          <% if can? :update, subject %>
            <%= link_to t('.edit', :default => t("helpers.links.edit", :model => model_class.model_name.human)),
                      edit_subject_path(subject),
                      :class => 'btn btn-mini',
                      :title => "#{t("helpers.links.edit", :model => model_class.model_name.human)} #{subject}",
                      "data-content" => object_summary(obj = subject, column = "content"),
                       :rel => "popover"
                       %>
          <% end %>
          <% if can? :destroy, subject %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy", :model => model_class.model_name.human)),
                      subject_path(subject),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @subjects %>
<br />

<% if can? :create, Subject %>
  <%= link_to t('.new', :default => t("helpers.links.new", :model => model_class.model_name.human)),
            new_subject_path,
            :class => 'btn btn-primary' %>
<% end %>
</div>
